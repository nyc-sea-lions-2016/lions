<form action="/sea_lions" method="POST">
  <div>
    <input type="text" name="name" placeholder="name">
  </div>
  <div>
    <input type="text" name="ocean" placeholder="ocean">
  </div>
  <div>
    <input type="text" name="whisker_count" placeholder="whisker count">
  </div>
  <div>
    <input type="submit" value="Create this Sea Lion!">
  </div>
  <div>
    <h3>Skills:</h3>
    <% @skills.each do |skill| %>
      <input type="checkbox" name="skills[]" value="<%= skill.id %>"><%= skill.name %><br>
    <% end %>
  </div>
</form>
